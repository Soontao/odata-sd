{
  "compilerOptions": {
    "charset": "UTF-8",
    "newLine": "lf",
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ]
  },
  "include": [
    "src",
    "src/bin"
  ],
  "exclude": [
    "commitlint.config.js"
  ]
}